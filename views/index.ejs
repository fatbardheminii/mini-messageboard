<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Messageboard</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="container">
      <h1>Mini Messageboard</h1>
      <a href="/new-message" class="button">New Message</a>
      <div class="message-container">
        <% for (let i = 0; i < messages.length; i++) { %>
          <% const message = messages[i]; %>
          <% const messageAdded = message.added.toLocaleString(); %>
          <div class="message">
            <h2 class="user"><%= message.user %></h2>
            <p class="text"><%= message.text %></p>
            <p class="added"><%= messageAdded %></p>
            <a href="/message/<%= i %>" class="button">Open</a>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>